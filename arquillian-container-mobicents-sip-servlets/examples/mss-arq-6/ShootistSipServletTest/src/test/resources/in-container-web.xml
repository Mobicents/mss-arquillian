<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
      http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<display-name>Click To Call</display-name>
	<description>Simple Converged Sip Servlet Demo</description>

	<env-entry>
		<env-entry-name>name</env-entry-name>
		<env-entry-type>java.lang.String</env-entry-type>
		<env-entry-value>Tomcat</env-entry-value>
	</env-entry>

	<servlet>
		<servlet-name>ClickToCall</servlet-name>
		<servlet-class>org.mobicents.servlet.sip.testsuite.click2call.SimpleWebServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ClickToCall</servlet-name>
		<url-pattern>/call</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>org.mobicents.servlet.sip.ctf.core.environment.servlet.SipServletsListener</listener-class>
	</listener>

	<resource-env-ref>
		<description>Object factory for the CDI Bean Manager</description>
		<resource-env-ref-name>BeanManager</resource-env-ref-name>
		<resource-env-ref-type>javax.enterprise.inject.spi.BeanManager</resource-env-ref-type>
	</resource-env-ref>

</web-app>
